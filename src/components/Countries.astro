---

const res = await fetch('https://restcountries.com/v3.1/all');
const data = await res.json();
console.log(data);
---

<div class="grid grid-8 sm-grid-cols-2 lg-cols-3">
    <article>
        {
            data.map((country) => (
            <h2 class="text-white">
                { country.name.official}
            </h2>

            )
)

        }
    </article>
    <h3>
        {
            data[0].name.official
        }
    </h3>

</div>
